@model IEnumerable<Shoes_project.Models.MembershipLevel>

@{
    ViewData["Title"] = "Membership Levels";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Membership Levels</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-square-fill"></i> Add Level
        </button>
    </div>

    <!-- Search -->
    <div class="mb-4">
        <form asp-action="Search" method="post" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Search membership..." />
            <button class="btn btn-outline-primary">
                <i class="bi bi-search"></i> Search
            </button>
        </form>
    </div>

    <!-- Membership Cards -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var lvl in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="card-title mb-0">@lvl.Name</h5>
                        </div>

                        <div class="card-body">
                            <p class="mb-1"><strong>Discount:</strong> @lvl.DiscountPercentage %</p>
                            <p class="mb-1"><strong>Min Spend:</strong> Rs. @lvl.MinimumSpend.ToString("N2")</p>
                            <p class="mb-1"><strong>Benefits:</strong> @lvl.Benefits</p>
                        </div>

                        <div class="card-footer d-flex justify-content-between">
                            <button class="btn btn-warning btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#editModal-@lvl.MembershipLevelId">
                                <i class="bi bi-pencil-square"></i> Edit
                            </button>

                            <button class="btn btn-danger btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal-@lvl.MembershipLevelId">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    No membership levels found.
                </div>
            </div>
        }
    </div>
</div>

<!-- CREATE MODAL -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Insert" method="post">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">
                        <i class="bi bi-plus-square-fill"></i> New Membership Level
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body row g-3">
                    <div class="col-md-6">
                        <label>Level Name</label>
                        <input name="Name" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label>Discount (%)</label>
                        <input type="number" step="0.01" name="DiscountPercentage" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label>Minimum Spend</label>
                        <input type="number" step="0.01" name="MinimumSpend" class="form-control" required />
                    </div>
                    <div class="col-12">
                        <label>Benefits</label>
                        <textarea name="Benefits" class="form-control"></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-warning w-100">
                        <i class="bi bi-save-fill"></i> Save Level
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- EDIT & DELETE MODALS -->
@foreach (var lvl in Model)
{
    <!-- EDIT -->
    <div class="modal fade" id="editModal-@lvl.MembershipLevelId" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <form asp-action="Update" method="post">
                    <input type="hidden" name="id" value="@lvl.MembershipLevelId" />

                    <div class="modal-header bg-warning text-dark">
                        <h5 class="modal-title">
                            <i class="bi bi-pencil-square"></i> Edit @lvl.Name
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body row g-3">
                        <div class="col-md-6"><label>Name</label><input name="Name" value="@lvl.Name" class="form-control" required /></div>
                        <div class="col-md-6"><label>Discount (%)</label><input type="number" step="0.01" name="DiscountPercentage" value="@lvl.DiscountPercentage" class="form-control" required /></div>
                        <div class="col-md-6"><label>Minimum Spend</label><input type="number" step="0.01" name="MinimumSpend" value="@lvl.MinimumSpend" class="form-control" required /></div>
                        <div class="col-12"><label>Benefits</label><textarea name="Benefits" class="form-control">@lvl.Benefits</textarea></div>
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-primary w-100">
                            <i class="bi bi-check-circle"></i> Update Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- DELETE -->
    <div class="modal fade" id="deleteModal-@lvl.MembershipLevelId" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center p-4">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@lvl.MembershipLevelId" />
                    <h5 class="text-danger">Confirm Delete?</h5>
                    <p>Remove <strong>@lvl.Name</strong> level?</p>

                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete Now</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}