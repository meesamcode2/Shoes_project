@model IEnumerable<Shoes_project.Models.Warehouse>

@{
    ViewData["Title"] = "Warehouses";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Warehouse Dashboard</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-square-fill"></i> Add Warehouse
        </button>
    </div>

    <!-- Search -->
    <div class="mb-4">
        <form asp-action="Search" method="post" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Search by name or city..." />
            <button class="btn btn-outline-primary">
                <i class="bi bi-search"></i> Search
            </button>
        </form>
    </div>

    <!-- Warehouse Cards -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var w in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title mb-0">@w.Name</h5>
                            <small>@w.City, @w.Country</small>
                        </div>

                        <div class="card-body">
                            <p class="mb-1"><strong>Location:</strong> @w.Location</p>
                            <p class="mb-1"><strong>Capacity:</strong> @w.Capacity</p>
                            <p class="mb-1"><strong>Manager:</strong> @w.ManagerName</p>
                            <p class="mb-1"><strong>Contact:</strong> @w.ContactNumber</p>
                        </div>

                        <div class="card-footer d-flex justify-content-between">
                            <button class="btn btn-warning btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#editModal-@w.WarehouseId">
                                <i class="bi bi-pencil-square"></i> Edit
                            </button>

                            <button class="btn btn-danger btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal-@w.WarehouseId">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    No warehouses found.
                </div>
            </div>
        }
    </div>
</div>

<!-- CREATE MODAL -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Insert" method="post">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-plus-square-fill"></i> New Warehouse
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body row g-3">
                    <div class="col-md-6">
                        <label>Name</label>
                        <input name="Name" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label>Location</label>
                        <input name="Location" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label>City</label>
                        <input name="City" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label>Country</label>
                        <input name="Country" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label>Capacity</label>
                        <input type="number" name="Capacity" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label>Manager Name</label>
                        <input name="ManagerName" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label>Contact Number</label>
                        <input name="ContactNumber" class="form-control" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-info w-100">
                        <i class="bi bi-save-fill"></i> Save Warehouse
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- EDIT & DELETE MODALS -->
@foreach (var w in Model)
{
    <!-- EDIT -->
    <div class="modal fade" id="editModal-@w.WarehouseId" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <form asp-action="Update" method="post">
                    <input type="hidden" name="id" value="@w.WarehouseId" />

                    <div class="modal-header bg-warning text-dark">
                        <h5 class="modal-title">
                            <i class="bi bi-pencil-square"></i> Edit @w.Name
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body row g-3">
                        <div class="col-md-6"><label>Name</label><input name="Name" value="@w.Name" class="form-control" required /></div>
                        <div class="col-md-6"><label>Location</label><input name="Location" value="@w.Location" class="form-control" required /></div>
                        <div class="col-md-6"><label>City</label><input name="City" value="@w.City" class="form-control" required /></div>
                        <div class="col-md-6"><label>Country</label><input name="Country" value="@w.Country" class="form-control" required /></div>
                        <div class="col-md-6"><label>Capacity</label><input type="number" name="Capacity" value="@w.Capacity" class="form-control" required /></div>
                        <div class="col-md-6"><label>Manager</label><input name="ManagerName" value="@w.ManagerName" class="form-control" /></div>
                        <div class="col-12"><label>Contact</label><input name="ContactNumber" value="@w.ContactNumber" class="form-control" /></div>
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-primary w-100">
                            <i class="bi bi-check-circle"></i> Update Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- DELETE -->
    <div class="modal fade" id="deleteModal-@w.WarehouseId" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center p-4">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@w.WarehouseId" />
                    <h5 class="text-danger">Confirm Delete?</h5>
                    <p>Removing <strong>@w.Name</strong> is permanent.</p>

                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete Now</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}