@model IEnumerable<Shoes_project.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Product Dashboard</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-square-fill"></i> Add Product
        </button>
    </div>

    <!-- Search -->
    <div class="mb-4">
        <form asp-action="Search" method="post" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Search by name or brand..." />
            <button class="btn btn-outline-primary"><i class="bi bi-search"></i> Search</button>
        </form>
    </div>

    <!-- Product Cards -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var prod in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0">@prod.Name</h5>
                            <small>@prod.Brand</small>
                        </div>
                        <div class="card-body">
                            <p class="mb-1"><strong>Category:</strong> @prod.CategoryName</p>
                            <p class="mb-1"><strong>Price:</strong> Rs. @prod.Price.ToString("N2")</p>
                            <p class="mb-1"><strong>Stock:</strong> @prod.StockQuantity</p>
                            <p class="mb-1"><strong>SKU:</strong> @prod.SKU</p>
                            <p class="mb-1"><strong>Warranty:</strong> @prod.WarrantyMonths mo</p>
                            <p class="mb-1"><strong>Supplier:</strong> @prod.Supplier</p>
                            <p class="mb-1"><strong>Release:</strong> @prod.ReleaseDate.ToString("yyyy-MM-dd")</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal-@prod.ProductId">
                                <i class="bi bi-pencil-square"></i> Edit
                            </button>
                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@prod.ProductId">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">No products found.</div>
            </div>
        }
    </div>
</div>

<!-- CREATE MODAL -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Insert" method="post">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-plus-square-fill"></i> New Product</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body row g-3">
                    <div class="col-md-6"><label>Name</label><input type="text" name="Name" class="form-control" required /></div>
                    <div class="col-md-6"><label>Brand</label><input type="text" name="Brand" class="form-control" required /></div>
                    <div class="col-md-6"><label>Category</label><input type="text" name="CategoryName" class="form-control" required /></div>
                    <div class="col-md-6"><label>Price</label><input type="number" step="0.01" name="Price" class="form-control" required /></div>
                    <div class="col-md-6"><label>Stock Quantity</label><input type="number" name="StockQuantity" class="form-control" required /></div>
                    <div class="col-md-6"><label>SKU</label><input type="text" name="SKU" class="form-control" required /></div>
                    <div class="col-md-6"><label>Warranty (Months)</label><input type="number" name="WarrantyMonths" class="form-control" required /></div>
                    <div class="col-md-6"><label>Supplier</label><input type="text" name="Supplier" class="form-control" required /></div>
                    <div class="col-md-6"><label>Release Date</label><input type="date" name="ReleaseDate" class="form-control" required /></div>
                    <div class="col-12"><label>Description</label><textarea name="Description" class="form-control" required></textarea></div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success w-100"><i class="bi bi-save-fill"></i> Save Product</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- EDIT & DELETE MODALS -->
@foreach (var prod in Model)
{
    <div class="modal fade" id="editModal-@prod.ProductId" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <form asp-action="Update" method="post">
                    <input type="hidden" name="id" value="@prod.ProductId" />
                    <div class="modal-header bg-warning text-dark">
                        <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Edit @prod.Name</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body row g-3">
                        <div class="col-md-6"><label>Name</label><input type="text" name="Name" value="@prod.Name" class="form-control" required /></div>
                        <div class="col-md-6"><label>Brand</label><input type="text" name="Brand" value="@prod.Brand" class="form-control" required /></div>
                        <div class="col-md-6"><label>Category</label><input type="text" name="CategoryName" value="@prod.CategoryName" class="form-control" required /></div>
                        <div class="col-md-6"><label>Price</label><input type="number" step="0.01" name="Price" value="@prod.Price" class="form-control" required /></div>
                        <div class="col-md-6"><label>Stock Quantity</label><input type="number" name="StockQuantity" value="@prod.StockQuantity" class="form-control" required /></div>
                        <div class="col-md-6"><label>SKU</label><input type="text" name="SKU" value="@prod.SKU" class="form-control" required /></div>
                        <div class="col-md-6"><label>Warranty (Months)</label><input type="number" name="WarrantyMonths" value="@prod.WarrantyMonths" class="form-control" required /></div>
                        <div class="col-md-6"><label>Supplier</label><input type="text" name="Supplier" value="@prod.Supplier" class="form-control" required /></div>
                        <div class="col-md-6"><label>Release Date</label><input type="date" name="ReleaseDate" value="@prod.ReleaseDate.ToString("yyyy-MM-dd")" class="form-control" required /></div>
                        <div class="col-12"><label>Description</label><textarea name="Description" class="form-control" required>@prod.Description</textarea></div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary w-100"><i class="bi bi-check-circle"></i> Update Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal-@prod.ProductId" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center p-4">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@prod.ProductId" />
                    <h5 class="text-danger">Confirm Delete?</h5>
                    <p>Removing <strong>@prod.Name</strong> is permanent.</p>
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete Now</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}