<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoeXpert</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shoes_project.styles.css" asp-append-version="true" />
</head>
<body>

    @{
        var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
        var action = ViewContext.RouteData.Values["Action"]?.ToString();
        var accessLevel = Context.Session.GetInt32("AccessLevel"); 
        var isLoggedIn = accessLevel != null;
        var username = Context.Session.GetString("Username");
    }

    @if (!(controller == "Account" && (action == "Login" || action == "Signup")))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">ShoeXpert</a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarMain">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarMain">

                        <ul class="navbar-nav flex-grow-1">

                            
                            @if (!isLoggedIn)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                            }

                            
                            @if (isLoggedIn)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                                </li>

                                @if (accessLevel == 1 || accessLevel == 2)
                                {
                                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Product" asp-action="Index">Products</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Order" asp-action="Index">Orders</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Promotion" asp-action="Index">Promotions</a></li>
                                }
                                @if (accessLevel == 1)
                                {
                                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Customer" asp-action="Index">Customers</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Warehouse" asp-action="Index">Warehouses</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Delivery" asp-action="Index">Deliveries</a></li>
                                }
                            }
                        </ul>

                        <ul class="navbar-nav">
                            @if (!isLoggedIn)
                            {
                                <li class="nav-item">
                                    <a class="btn btn-outline-primary btn-sm"
                                       asp-controller="Account" asp-action="Login">
                                        Login
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <span class="navbar-text me-2">Hello, @username</span>
                                </li>
                                <li class="nav-item">
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            Logout
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>

                    </div>
                </div>
            </nav>
        </header>
    }

    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ShoeXpert
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
