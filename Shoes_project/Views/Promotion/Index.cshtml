@model IEnumerable<Shoes_project.Models.Promotion>

@{
    ViewData["Title"] = "Promotions";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Promotions Dashboard</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-square-fill"></i> Add Promotion
        </button>
    </div>

    <!-- Search -->
    <div class="mb-4">
        <form asp-action="Search" method="post" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Search by title or description..." />
            <button class="btn btn-outline-primary">Search</button>
        </form>
    </div>

    <!-- Promotion Cards -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var p in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0">@p.Title</h5>
                            <small>@p.StartDate.ToString("yyyy-MM-dd") - @p.EndDate.ToString("yyyy-MM-dd")</small>
                        </div>
                        <div class="card-body">
                            <p class="mb-1"><strong>Description:</strong> @p.Description</p>
                            <p class="mb-1"><strong>Discount:</strong> @p.DiscountPercentage %</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal-@p.PromotionId">
                                <i class="bi bi-pencil-square"></i> Edit
                            </button>
                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@p.PromotionId">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">No promotions found.</div>
            </div>
        }
    </div>
</div>

<!-- CREATE MODAL -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Insert" method="post">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-plus-square-fill"></i> New Promotion</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body row g-3">
                    <div class="col-md-6"><label>Title</label><input name="Title" class="form-control" required /></div>
                    <div class="col-md-6"><label>Discount %</label><input type="number" name="DiscountPercentage" class="form-control" min="0" max="100" required /></div>
                    <div class="col-md-6"><label>Start Date</label><input type="date" name="StartDate" class="form-control" required /></div>
                    <div class="col-md-6"><label>End Date</label><input type="date" name="EndDate" class="form-control" required /></div>
                    <div class="col-12"><label>Description</label><textarea name="Description" class="form-control" rows="3" required></textarea></div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success w-100"><i class="bi bi-save-fill"></i> Save Promotion</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- EDIT & DELETE MODALS -->
@foreach (var p in Model)
{
    <div class="modal fade" id="editModal-@p.PromotionId" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <form asp-action="Update" method="post">
                    <input type="hidden" name="PromotionId" value="@p.PromotionId" />
                    <div class="modal-header bg-warning text-dark">
                        <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Edit @p.Title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body row g-3">
                        <div class="col-md-6"><label>Title</label><input name="Title" value="@p.Title" class="form-control" required /></div>
                        <div class="col-md-6"><label>Discount %</label><input type="number" name="DiscountPercentage" value="@p.DiscountPercentage" class="form-control" min="0" max="100" required /></div>
                        <div class="col-md-6"><label>Start Date</label><input type="date" name="StartDate" value="@p.StartDate.ToString("yyyy-MM-dd")" class="form-control" required /></div>
                        <div class="col-md-6"><label>End Date</label><input type="date" name="EndDate" value="@p.EndDate.ToString("yyyy-MM-dd")" class="form-control" required /></div>
                        <div class="col-12"><label>Description</label><textarea name="Description" class="form-control" rows="3" required>@p.Description</textarea></div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary w-100"><i class="bi bi-check-circle"></i> Update Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal-@p.PromotionId" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center p-4">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@p.PromotionId" />
                    <h5 class="text-danger">Confirm Delete?</h5>
                    <p>Removing <strong>@p.Title</strong> is permanent.</p>
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete Now</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}