@model Shoes_project.Models.User

@{
    ViewData["Title"] = "Signup";
}

<div class="container mt-5">
    <h2>Sign Up</h2>
    <form asp-action="Signup" method="post" class="mt-3">
        <div class="mb-3">
            <label>Username</label>
            <input asp-for="Username" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input asp-for="Email" type="email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Password</label>
            <input asp-for="Password" type="password" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Access Level</label>
            <select asp-for="AccessLevel" class="form-control" required>
                <option value="0">Owner</option>
                <option value="1">Manager</option>
                <option value="2">Guest</option>
            </select>
        </div>
        <div class="mb-3 text-danger">@ViewBag.Error</div>
        <button class="btn btn-success w-100">Sign Up</button>
        <div class="mt-2">
            <a asp-action="Login">Already have an account? Login</a>
        </div>
    </form>
</div>