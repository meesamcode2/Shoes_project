@model IEnumerable<Shoes_project.Models.Delivery>

@{
    ViewData["Title"] = "Deliveries";
    var orders = ViewBag.Orders as List<Shoes_project.Models.Order>;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Delivery Dashboard</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-square-fill"></i> Add Delivery
        </button>
    </div>

    <!-- Search -->
    <div class="mb-4">
        <form asp-action="Search" method="post" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Search by courier or status..." />
            <button class="btn btn-outline-primary">Search</button>
        </form>
    </div>

    <!-- Delivery Cards -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var d in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title mb-0">@d.Order?.CustomerName</h5>
                            <small>@d.DeliveryDate.ToString("yyyy-MM-dd")</small>
                        </div>
                        <div class="card-body">
                            <p class="mb-1"><strong>Courier:</strong> @d.Courier</p>
                            <p class="mb-1"><strong>Status:</strong> @d.DeliveryStatus</p>
                            <p class="mb-1"><strong>Address:</strong> @d.Address</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal-@d.DeliveryId">
                                <i class="bi bi-pencil-square"></i> Edit
                            </button>
                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@d.DeliveryId">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">No deliveries found.</div>
            </div>
        }
    </div>
</div>

<!-- CREATE MODAL -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Insert" method="post">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title"><i class="bi bi-plus-square-fill"></i> New Delivery</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body row g-3">
                    <div class="col-md-6">
                        <label>Order</label>
                        <select name="OrderId" class="form-control" required>
                            <option value="">-- Select Order --</option>
                            @foreach (var order in orders)
                            {
                                <option value="@order.OrderId">@order.CustomerName - @order.OrderDate.ToString("yyyy-MM-dd")</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6"><label>Courier</label><input name="Courier" class="form-control" required /></div>
                    <div class="col-md-6"><label>Status</label>
                        <select name="DeliveryStatus" class="form-control" required>
                            <option>Pending</option>
                            <option>Shipped</option>
                            <option>Delivered</option>
                        </select>
                    </div>
                    <div class="col-md-6"><label>Delivery Date</label><input type="date" name="DeliveryDate" class="form-control" required /></div>
                    <div class="col-12"><label>Address</label><input name="Address" class="form-control" required /></div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-info w-100"><i class="bi bi-save-fill"></i> Save Delivery</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- EDIT & DELETE MODALS -->
@foreach (var d in Model)
{
    <div class="modal fade" id="editModal-@d.DeliveryId" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <form asp-action="Update" method="post">
                    <input type="hidden" name="DeliveryId" value="@d.DeliveryId" />
                    <div class="modal-header bg-warning text-dark">
                        <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Edit @d.Order?.CustomerName</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body row g-3">
                        <div class="col-md-6">
                            <label>Order</label>
                            <select name="OrderId" class="form-control" required>
                                @foreach (var order in orders)
                                {
                                    if (d.OrderId == order.OrderId)
                                    {
                                        <option value="@order.OrderId" selected="selected">@order.CustomerName - @order.OrderDate.ToString("yyyy-MM-dd")</option>
                                    }
                                    else
                                    {
                                        <option value="@order.OrderId">@order.CustomerName - @order.OrderDate.ToString("yyyy-MM-dd")</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6"><label>Courier</label><input name="Courier" value="@d.Courier" class="form-control" required /></div>
                        <div class="col-md-6"><label>Status</label>
                            <select name="DeliveryStatus" class="form-control" required>
                                <option selected>@d.DeliveryStatus</option>
                                <option>Pending</option>
                                <option>Shipped</option>
                                <option>Delivered</option>
                            </select>
                        </div>
                        <div class="col-md-6"><label>Delivery Date</label><input type="date" name="DeliveryDate" value="@d.DeliveryDate.ToString("yyyy-MM-dd")" class="form-control" required /></div>
                        <div class="col-12"><label>Address</label><input name="Address" value="@d.Address" class="form-control" required /></div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary w-100"><i class="bi bi-check-circle"></i> Update Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal-@d.DeliveryId" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center p-4">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@d.DeliveryId" />
                    <h5 class="text-danger">Confirm Delete?</h5>
                    <p>Removing <strong>@d.Order?.CustomerName</strong> is permanent.</p>
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete Now</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}